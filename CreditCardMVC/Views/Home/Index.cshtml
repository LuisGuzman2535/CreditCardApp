@{
    ViewData["Title"] = "Home Page";
}

@model List<CreditCardAPI.Models.TarjetasDeCredito>
@using CreditCardMVC.Utils

<div class="container mt-5">
    <h2 class="mb-4">Listado de Tarjetas de Crédito</h2>
    <table class="table table-striped table-info">
        <thead>
            <tr>
                <th>Número de Tarjeta</th>
                <th>Nombre</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tarjeta in Model)
            {
                <tr>
                    <td> @Utilidades.OcultarNumeroTarjeta(@tarjeta.NumeroTarjeta)</td>
                    <td>@tarjeta.Usuario.Nombre</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-controller="EstadoDeCuenta" asp-action="EstadoDeCuenta" asp-route-id="@tarjeta.TarjetaId">Estado de Cuenta</a>
                        <a class="btn btn-secondary btn-sm" asp-controller="Compras" asp-action="RegistrarCompra" asp-route-id="@tarjeta.TarjetaId">Registrar Compra</a>
                        <a class="btn btn-success btn-sm" asp-controller="Pagos" asp-action="RegistrarPago" asp-route-id="@tarjeta.TarjetaId">Registrar Pago</a>
                        <a class="btn btn-info btn-sm" asp-controller="Transaccion" asp-action="Transacciones" asp-route-id="@tarjeta.TarjetaId">Transacciones</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
